#include<stdio.h>
#include<string.h>
int main()
{
    char str1[20],reversed [20];
    int i,len,flag=0;
    printf("enter a string:");
    scanf("%s",str1);
    len=strlen(str1);
    for(i=0;i<len;i++){
        if(str1[i]!= str1[len-i-1]){
            flag=1;
        }}
        
    if(flag=0){
        printf("the given string is palindrome");
    }
    else {
        printf("the given sting is not a palindrome");
    }
}
